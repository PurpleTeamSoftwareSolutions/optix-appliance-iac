{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_vpc_id": "{{ env `AWS_VPC_ID` }}",
    "aws_subnet_id": "{{ env `AWS_SUBNET_ID` }}",
    "aws_instance_type": "{{ env `AWS_INSTANCE_TYPE` }}",
    "aws_region": "{{env `AWS_REGION`}}",
    "optix_appliance_name": "optix-appliance-rhel9-{{ timestamp }}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `aws_region`}}",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "associate_public_ip_address": true,
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "RHEL-9.*_HVM-*-x86_64-*-Hourly*-GP3",
          "root-device-type": "ebs"
        },
        "owners": ["309956199498"],
        "most_recent": true
      },
      "instance_type": "{{ user `aws_instance_type`}}",
      "ssh_username": "ec2-user",
      "ami_name": "{{user `optix_appliance_name`}}",
      "tags": {
        "OS_Version": "RHEL",
        "Release": "9",
        "License": "Hourly or BYOS",
        "Note": "Can be used with hourly billing or BYOS with subscription-manager",
        "Base_AMI_Name": "{{ .SourceAMIName }}",
        "AMI_Name": "{{user `optix_appliance_name`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "configs/purpleteamsoftware.list",
      "destination": "/tmp/"
    },
     {
      "type": "file",
      "source": "configs/sudoers",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "script": "scripts/provision-ami-rhel9.sh"
    }
  ]
}