{
  "variables": {
    "optix_appliance_name": "optix-cloud-{{ timestamp }}.qcow2",
    "http_directory": "http/",
    "iso_url": "https://releases.ubuntu.com/noble/ubuntu-24.04.1-live-server-amd64.iso",
    "iso_checksum": "sha256:e240e4b801f7bb68c20d1356b60968ad0c33a41d00d828e74ceb3364a0317be9"
  },
  "builders": [
    {
      "type": "qemu",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "boot_wait": "3s",
      "boot_command": [
        "c",
        "linux /casper/vmlinuz --- autoinstall ds='nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/' ",
        "initrd /casper/initrd<enter>",
        "boot<enter>"
      ],
      "http_directory": "{{user `http_directory`}}",
      "shutdown_command": "sudo poweroff",
      "ssh_username": "ubuntu",
      "ssh_password": "Youshou1dch@ng3measap",
      "ssh_pty": true,
      "ssh_timeout": "20m",
      "ssh_handshake_attempts": 100,
      "vm_name": "{{user `optix_appliance_name`}}",
      "cpus": 2,
      "memory": 2048,
      "disk_size": "8G",
      "disk_compression": true,
      "disk_detect_zeroes": "unmap",
      "disk_discard": "unmap",
      "format": "qcow2",
      "accelerator": "kvm",
      "qemu_binary": "qemu-system-x86_64",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "use_backing_file": false,
      "headless": true,
      "qemuargs": [
        ["-serial", "mon:stdio"],
        ["-device", "virtio-net,netdev=user.0"],
        ["-netdev", "user,id=user.0"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "configs/sudoers",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup-cloud-image.sh",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo sync",
        "sudo fstrim -av || true"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "optix-cloud-{{timestamp}}.qcow2.tar.gz",
      "compression_level": 9
    }
  ]
}