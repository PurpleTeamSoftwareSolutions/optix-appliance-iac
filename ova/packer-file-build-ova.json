{
  "variables": {
    "optix_appliance_name": "optix-cloud-{{ timestamp }}.qcow2",
    "http_directory": "http/"
  },
  "builders": [
    {
      "type": "qemu",
      "iso_url": "ubuntu-24.04.2-live-server-amd64.iso",
      "iso_checksum": "sha256:d6dab0c3a657988501b4bd76f1297c053df710e06e0c3aece60dead24f270b4d",
      "boot_wait": "5s",
      "cd_files": [
        "{{user `http_directory`}}meta-data",
        "{{user `http_directory`}}user-data"
      ],
      "cd_label": "cidata",
      "boot_command": [
        "e<down><down><down><end>",
        " autoinstall ds=nocloud;",
        "<F10>"
      ],
      "shutdown_command": "sudo poweroff",
      "ssh_username": "ubuntu",
      "ssh_password": "Youshou1dch@ng3measap",
      "ssh_pty": true,
      "ssh_timeout": "40m",
      "ssh_handshake_attempts": 250,
      "vm_name": "{{user `optix_appliance_name`}}",
      "cpus": 2,
      "memory": 2048,
      "disk_size": "8G",
      "format": "qcow2",
      "accelerator": "kvm",
      "qemu_binary": "qemu-system-x86_64",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "use_backing_file": false,
      "qemuargs": [
        ["-display", "vnc=0.0.0.0:80"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "configs/sudoers",
      "destination": "/tmp/"
    },
    {
      "type": "shell",
      "script": "scripts/cleanup-cloud-image.sh",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "environment_vars": [
        "DEBIAN_FRONTEND=noninteractive"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo sync",
        "sudo fstrim -av || true"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "compress",
      "output": "optix-cloud-{{timestamp}}.qcow2.tar.gz",
      "compression_level": 9
    }
  ]
}